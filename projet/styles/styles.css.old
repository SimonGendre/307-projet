body {
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  background-color: #5d5d5d;
  color: #9cdcfe;
  margin: 1cm;
  text-align: left;
}

a {
  color: #94cea8;
}

table {
  text-align: center;
  margin: 1cm;
}
td {
  margin: 0.5cm;
}

#logo {
  max-height: 100%;
  margin: auto;
  position: absolute;
  top: 5px;
  right: 5px;
  border-radius: 100%;
}
#update {
  margin: auto;
  position: absolute;
  bottom: 5px;
  right: 5px;
}
button {
  border-radius: 5px;
  border-color: #d7ba66;
  background-color: #ce8455;
}

#container {
  background-color: white;
  color: black;
  width: 85%;
  padding: 1em;
  border: 1px solid black;
  margin: auto;
  font-family: Verdana, Arial, serif;
  display: flex;
  flex-direction: column;
}

#menu {
  font-size: 15pt;
  height: 10%;
}
#texte {
  margin: auto;
  width: 50%;
  margin-top: 10%;
  text-align: justify;
}
#carte {
  height: 60vh;
}
.separateur {
  padding-left: 1em;
  padding-right: 1em;
}
.important {
  color: red;
  margin-top: 2em;
}
.bottomLeft {
  margin: auto;
  position: absolute;
  font-size: 10pt;
  bottom: 5px;
  left: 50px;
}
.ombre {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
